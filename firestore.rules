rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
         request.auth.uid == 'ydPdMAoXOiNTWLCTDrNMRAHZ2Kx1');
    }
    
    // Helper function to check if user is vendor
    function isVendor() {
      return request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'vendor';
    }
    
    // Users collection
    match /users/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || isAdmin());
      allow write: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && (request.auth.uid == userId || isAdmin());
      
      // User orders subcollection
      match /orders/{orderId} {
        allow read, write: if request.auth != null;
      }
    }

    // Notifications collection
    match /notifications/{notificationId} {
      allow read, write: if request.auth != null;
    }

    // Messages collection
    match /messages/{messageId} {
      allow read, write: if request.auth != null;
    }
    
    // Restaurants collection
    match /restaurants/{restaurantId} {
      allow read: if true;
      allow write: if request.auth != null && 
        (resource.data.vendorId == request.auth.uid || isAdmin());
      
      // Restaurant menu subcollection
      match /menu/{menuItemId} {
        allow read: if true;
        allow write: if request.auth != null && 
          (get(/databases/$(database)/documents/restaurants/$(restaurantId)).data.vendorId == request.auth.uid ||
           isAdmin());
      }
    }
    
    // Menu Items collection
    match /menuItems/{itemId} {
      allow read: if true;
      allow write: if request.auth != null && (isAdmin() || isVendor());
    }
    
    // Vendors collection
    match /vendors/{vendorId} {
      // Allow if auth uid matches vendorId OR if user owns the restaurant with this ID
      function isOwner() {
        return request.auth.uid == vendorId || 
               (exists(/databases/$(database)/documents/restaurants/$(vendorId)) &&
                get(/databases/$(database)/documents/restaurants/$(vendorId)).data.vendorId == request.auth.uid);
      }

      allow read: if request.auth != null && (isOwner() || isAdmin());
      allow write: if request.auth != null && (isOwner() || isAdmin());
      
      // Vendor menu items subcollection
      match /menuItems/{menuItemId} {
        allow read: if request.auth != null && (isOwner() || isAdmin());
        allow write: if request.auth != null && (isOwner() || isAdmin());
      }
      
      // Vendor categories subcollection
      match /categories/{categoryId} {
        allow read: if request.auth != null && (isOwner() || isAdmin());
        allow write: if request.auth != null && (isOwner() || isAdmin());
      }
    }

    // Vendor Notification Settings
    match /vendorNotificationSettings/{vendorId} {
      allow read: if request.auth != null && (request.auth.uid == vendorId || isAdmin());
      allow write: if request.auth != null && (request.auth.uid == vendorId || isAdmin());
    }
    
    // Payout Requests collection
    match /payoutRequests/{payoutId} {
      allow read: if request.auth != null && (isAdmin() || isVendor());
      allow create: if request.auth != null && isVendor();
      allow update, delete: if isAdmin();
    }
    
    // Password Reset Logs
    match /passwordResetLogs/{logId} {
      allow read, write: if isAdmin();
    }
    
    // Platform Settings
    match /settings/{settingId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
  }
}