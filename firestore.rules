rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
         request.auth.uid == 'ydPdMAoXOiNTWLCTDrNMRAHZ2Kx1');
    }
    
    // Helper function to check if user is vendor
    function isVendor() {
      return request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'vendor';
    }
    
    // Users collection - users can read/write their own profile, admins can read all
    match /users/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || isAdmin());
      allow write: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && (request.auth.uid == userId || isAdmin());
      
      // User orders subcollection - RELAXED FOR DEBUGGING
      match /orders/{orderId} {
        allow read, write: if request.auth != null;
      }
    }

    // Notifications collection - RELAXED FOR DEBUGGING
    match /notifications/{notificationId} {
      allow read, write: if request.auth != null;
    }
    
    // Restaurants collection - public read access, vendors/admins can write
    match /restaurants/{restaurantId} {
      allow read: if true;
      allow write: if request.auth != null && 
        (resource.data.ownerId == request.auth.uid || isAdmin());
      
      // Restaurant menu subcollection
      match /menu/{menuItemId} {
        allow read: if true;
        allow write: if request.auth != null && 
          (get(/databases/$(database)/documents/restaurants/$(restaurantId)).data.ownerId == request.auth.uid ||
           isAdmin());
      }
    }
    
    // Menu Items collection - admins and vendors can manage
    match /menuItems/{itemId} {
      allow read: if true;
      allow write: if request.auth != null && (isAdmin() || isVendor());
    }
    
    // Admins collection - only admins can read/write
    match /admins/{adminId} {
      allow read, write: if isAdmin();
    }
    
    // Global orders collection (for admin/vendor access) - RELAXED FOR DEBUGGING
    match /orders/{orderId} {
      allow read, write: if request.auth != null;
    }
    
    // Payout Requests collection - vendors can create, admins can read/update
    match /payoutRequests/{payoutId} {
      allow read: if request.auth != null && (isAdmin() || isVendor());
      allow create: if request.auth != null && isVendor();
      allow update, delete: if isAdmin();
    }
    
    // Password Reset Logs - admins only
    match /passwordResetLogs/{logId} {
      allow read, write: if isAdmin();
    }
    
    // Platform Settings - admins only
    match /settings/{settingId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
  }
}